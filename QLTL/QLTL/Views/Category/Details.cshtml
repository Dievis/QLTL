@model QLTL.ViewModels.CategoryVM.CategoryViewModel
@{
    ViewBag.Title = "Chi tiết danh mục";

    var canEdit = false;

    if (Session["IsSuperAdmin"] is bool isSuperAdmin && isSuperAdmin)
    {
        canEdit = true;
    }
    else if (Session["Permissions"] is List<string> perms)
    {
        canEdit = perms.Contains("Category.Edit", StringComparer.OrdinalIgnoreCase);
    }
}
}

@section styles {
    <link href="~/Content/content.css" rel="stylesheet" />
}

<div class="container mt-4">
    <h2>Chi tiết danh mục</h2>

    <dl class="row">
        <dt class="col-sm-3">Tên danh mục</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Loại danh mục</dt>
        <dd class="col-sm-9">@Model.CategoryTypeName</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            @if (Model.IsDeleted)
            {
                <span class="badge bg-danger">Đã xóa</span>
            }
            else
            {
                <span class="badge bg-success">Hoạt động</span>
            }
        </dd>

        <dt class="col-sm-3">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Ngày cập nhật</dt>
        <dd class="col-sm-9"> @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy") : "-")</dd>
    </dl>
    @if (canEdit)
    {
        <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
    }

    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
