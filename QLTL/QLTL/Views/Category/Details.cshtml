@model QLTL.ViewModels.CategoryVM.CategoryViewModel
@{
    ViewBag.Title = "Chi tiết danh mục";

    var canEdit = false;

    if (Session["IsSuperAdmin"] is bool isSuperAdmin && isSuperAdmin)
    {
        canEdit = true;
    }
    else if (Session["Permissions"] is List<string> perms)
    {
        canEdit = perms.Contains("Category.Edit", StringComparer.OrdinalIgnoreCase);
    }
}
}

@section styles {
    <link href="~/Content/detail.css" rel="stylesheet" />
}

<div class="container mt-4">
    <div class="card shadow detail-card">
        <div class="card-header detail-header d-flex align-items-center">
            <i class="bi bi-folder-fill me-2"></i>
            <h4 class="mb-0">Chi tiết danh mục</h4>
        </div>
        <div class="card-body">

            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Tên danh mục:</div>
                <div class="col-sm-8">@Model.CategoryName</div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Loại danh mục:</div>
                <div class="col-sm-8">@Model.CategoryTypeName</div>
            </div>

            @if (Model.Description != null)
            {
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Mô tả:</div>
                    <div class="col-sm-8">@Model.Description</div>
                </div>
            }

            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Trạng thái:</div>
                <div class="col-sm-8">
                    @if (Model.IsDeleted)
                    {
                        <span class="badge bg-danger">Đã xóa</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Ngày tạo:</div>
                <div class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
            </div>

            @if (Model.UpdatedAt != null)
            {
                <div class="row mb-4">
                    <div class="col-sm-4 fw-bold">Ngày cập nhật:</div>
                    <div class="col-sm-8">
                        @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy") : "-")
                    </div>
                </div>
            }


            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                @if (canEdit)
                {
                    <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa
                    </a>
                }
            </div>

        </div>
    </div>
</div>