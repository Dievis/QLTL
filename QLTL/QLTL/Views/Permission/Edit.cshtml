@model QLTL.ViewModels.PermissionVM.PermissionViewModel

@{
    ViewBag.Title = "Chỉnh sửa quyền";
}

<div class="container mt-4">
    <h2>Chỉnh sửa quyền</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PermissionId)

        <div class="mb-3">
            @Html.LabelFor(m => m.PermissionName, "Tên quyền", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.PermissionName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PermissionName, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Description, "Mô tả", new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="mb-3 form-check">
            @Html.CheckBoxFor(m => m.IsDefault, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.IsDefault, "Quyền mặc định", new { @class = "form-check-label" })
        </div>

        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Cập nhật</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    }
</div>
