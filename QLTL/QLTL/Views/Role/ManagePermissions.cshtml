@model QLTL.ViewModels.RoleVM.RolePermissionManageVM
@{
    ViewBag.Title = "Quản lý quyền cho vai trò";
}

<div class="container mt-4">
    <h2 class="mb-4">Quản lý quyền cho vai trò: @Model.RoleName</h2>

    <div class="mb-3">
        <input type="text" id="searchPermission" class="form-control" placeholder="Tìm kiếm quyền..." />
    </div>

    @using (Html.BeginForm("ManagePermissions", "Role", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.RoleId)

        <table class="table table-striped table-hover" id="permissionsTable">
            <thead class="table-dark">
                <tr>
                    <th>Quyền</th>
                    <th>Gán cho vai trò</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Permissions.Count; i++)
                {
                    <tr>
                        <td class="permission-name">@Model.Permissions[i].PermissionName</td>
                        <td>
                            @Html.HiddenFor(m => m.Permissions[i].PermissionId)
                            @Html.CheckBoxFor(m => m.Permissions[i].IsAssigned)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
            <a href="@Url.Action("Index", "Role")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchPermission').on('input', function () {
                var search = $(this).val().toLowerCase();
                $('#permissionsTable tbody tr').each(function () {
                    var name = $(this).find('.permission-name').text().toLowerCase();
                    if (name.includes(search)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}
