@model QLTL.ViewModels.UserVM.UserViewModel
@{
    ViewBag.Title = "Chi tiết người dùng";
}

<div class="container mt-4">
    <h2>Chi tiết người dùng</h2>

    <dl class="row">
        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Điện thoại</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Phòng ban</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            @if (Model.IsDeleted)
            {
                <span class="badge bg-danger">Đã xóa</span>
            }
            else
            {
                <span class="badge bg-success">Hoạt động</span>
            }
        </dd>

        <dt class="col-sm-3">Ngày tạo</dt>
        <dd class="col-sm-9">@((Model.CreatedAt).ToString("dd/MM/yyyy") ?? "-")</dd>

        @if (Model.UpdatedAt != null)
        {
            <dt class="col-sm-3">Ngày cập nhật</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</dd>
        }
    </dl>

    <a href="@Url.Action("Edit", new { id = Model.UserId })" class="btn btn-warning">Sửa</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
</div>
