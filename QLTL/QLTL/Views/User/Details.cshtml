@model QLTL.ViewModels.UserVM.UserViewModel
@{
    ViewBag.Title = "Chi tiết người dùng";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Chi tiết người dùng</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-3">Tên đăng nhập</dt>
                        <dd class="col-sm-9">@Model.Username</dd>

                        <dt class="col-sm-3">Họ tên</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Điện thoại</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Phòng ban</dt>
                        <dd class="col-sm-9">@Model.DepartmentName</dd>

                        <dt class="col-sm-3">Trạng thái</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsDeleted)
                            {
                                <span class="badge bg-danger">Đã xóa</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Ngày tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

                        @if (Model.UpdatedAt != null)
                        {
                            <dt class="col-sm-3">Ngày cập nhật</dt>
                            <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</dd>
                        }

                        <dt class="col-sm-3">Vai trò</dt>
                        <dd class="col-sm-9">
                            @if (Model.SelectedRoleIds != null && Model.SelectedRoleIds.Any())
                            {
                                var allRoles = ViewBag.Roles as IEnumerable<QLTL.Models.Role>;
                                foreach (var role in allRoles.Where(r => Model.SelectedRoleIds.Contains(r.RoleId)))
                                {
                                    <span class="badge bg-info text-dark me-1">@role.RoleName</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Chưa có vai trò</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-3">
                        <a href="@Url.Action("Edit", new { id = Model.UserId })" class="btn btn-warning">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
