@model QLTL.ViewModels.UserVM.UserViewModel
@{
    ViewBag.Title = "Cập nhật người dùng";
}

<div class="container mt-4">
    <h2>Cập nhật người dùng</h2>

    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserId)

        <div class="mb-3">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.Label("Phòng ban")
            @Html.DropDownListFor(m => m.DepartmentId,
                new SelectList(ViewBag.Departments, "DepartmentId", "DepartmentName", Model.DepartmentId),
                "-- Chọn phòng ban --", new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.Label("Vai trò")
            @Html.ListBoxFor(m => m.SelectedRoleIds,
                new MultiSelectList(ViewBag.Roles, "RoleId", "RoleName", Model.SelectedRoleIds),
                new { @class = "form-control", size = "5" })
            <small class="form-text text-muted">Giữ Ctrl (Windows) hoặc Command (Mac) để chọn nhiều vai trò</small>
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    }
</div>
