@model QLTL.ViewModels.UserVM.UserViewModel
@{
    ViewBag.Title = "Thêm người dùng";
}

@section styles {
    <link href="~/Content/createEdit.css" rel="stylesheet" />
}

<div class="container mt-4">
    <div class="card shadow">
        <!-- Header -->
        <div class="card-header card-header-gradient d-flex justify-content-between align-items-center">
            <h2 class="mb-0 text-white">
                <i class="bi bi-person-plus me-2"></i> Thêm người dùng
            </h2>
            <a href="@Url.Action("Index", "User")" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <!-- Body -->
        <div class="card-body">
            @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <!-- Username -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <!-- Password -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <!-- Department -->
                <div class="mb-3">
                    @Html.Label("Phòng ban", new { @class = "form-label" })
                    @Html.DropDownListFor(
                        m => m.DepartmentId,
                        new SelectList(ViewBag.Departments, "DepartmentId", "DepartmentName"),
                        "-- Chọn phòng ban --",
                        new { @class = "form-select" }
                    )
                    @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-danger" })
                </div>

                <!-- Roles -->
                <div class="mb-3">
                    <label class="form-label">Vai trò <span class="text-danger">*</span></label>
                    <div class="border rounded p-2" style="max-height:200px; overflow-y:auto;">
                        @foreach (var role in ViewBag.Roles as List<QLTL.Models.Role>)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                       name="SelectedRoleIds"
                                       value="@role.RoleId"
                                       class="form-check-input"
                                       id="role_@role.RoleId" />
                                <label class="form-check-label" for="role_@role.RoleId">
                                    @role.RoleName
                                </label>
                            </div>
                        }
                    </div>
                    @Html.ValidationMessageFor(m => m.SelectedRoleIds, "", new { @class = "text-danger" })
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>
