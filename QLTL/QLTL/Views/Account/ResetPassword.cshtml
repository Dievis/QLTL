@model string
@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<div class="container mt-4">
    <h2 class="mb-4">Đặt lại mật khẩu</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
    {
        @Html.Hidden("token", Model)

        <div class="mb-3">
            <label for="newPassword" class="form-label">Mật khẩu mới</label>
            <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Xác nhận
        </button>
    }
</div>
