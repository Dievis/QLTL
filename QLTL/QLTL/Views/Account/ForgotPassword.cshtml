@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="container mt-4">
    <h2 class="mb-4">Quên mật khẩu</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Nhập email đăng ký" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-envelope"></i> Gửi yêu cầu
            </button>
            <a href="@Url.Action("Login", "Account")" class="btn btn-link">Quay lại đăng nhập</a>
        </div>
    }
</div>
