@model QLTL.ViewModels.DocumentVM.DocumentIndexVM
@{
    ViewBag.Title = "Tài liệu yêu thích";
    var currentUserId = Session["UserId"] != null ? (int)Session["UserId"] : 0;
}

<div class="container mt-4">
    <h2 class="mb-4">📑 Danh sách tài liệu yêu thích</h2>

    <div class="row">
        @if (!Model.Items.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">Bạn chưa có tài liệu yêu thích nào.</div>
            </div>
        }
        else
        {
            foreach (var item in Model.Items)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100" data-docid="@item.DocumentId">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted">Người tạo: <strong>@item.UploaderName</strong></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Ngày tạo: @item.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="@Url.Action("Details", "Document", new { id = item.DocumentId })" class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                                <button class="btn btn-sm btn-danger favorite-btn" data-userid="@currentUserId">
                                    <i class="bi bi-heart-fill"></i> Bỏ yêu thích
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.favorite-btn').click(function () {
                var btn = $(this);
                var docId = btn.closest('.card').data('docid');
                var userId = btn.data('userid');

                $.post('@Url.Action("RemoveFavorite", "Document")', { documentId: docId, userId: userId }, function (res) {
                    if (res.success) {
                        btn.closest('.col-md-4').fadeOut();
                    } else {
                        alert(res.message);
                    }
                });
            });
        });
    </script>
}
